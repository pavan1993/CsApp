# Database
# Replace 'your_username', 'your_password' with your actual PostgreSQL credentials
# If you don't have a password, remove ':your_password' from the URL
DATABASE_URL="postgresql://your_username:your_password@localhost:5432/customer_success_db?schema=public"

# For local development without password (common setup):
# DATABASE_URL="postgresql://your_username@localhost:5432/customer_success_db?schema=public"

# For default PostgreSQL user:
# DATABASE_URL="postgresql://postgres:your_password@localhost:5432/customer_success_db?schema=public"

# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000
